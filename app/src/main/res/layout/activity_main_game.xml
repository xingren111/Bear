<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Protein.MainGame">
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/nowturn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintVertical_bias="0"
        android:text="开始游戏"
        android:textSize="25sp"
        android:id="@+id/transform_game" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/transform_game"
        app:layout_constraintBottom_toTopOf="@id/BossHP"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintVertical_bias="0"
        android:text="当前回合数："
        android:textSize="25sp"
        android:id="@+id/nowturn" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/nowturn"
        app:layout_constraintBottom_toBottomOf="@id/skilltodamage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintHeight_percent="0.07"
        android:text="Boss当前血量："
        android:textSize="25sp"
        android:id="@+id/BossHP" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/BossHP"
        app:layout_constraintBottom_toBottomOf="@id/see_board"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/information"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintVertical_bias="0"
        android:text=""
        android:textSize="25sp"
        android:id="@+id/skilltodamage" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/BossHP"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/skilltodamage"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintVertical_bias="0"
        android:text=""
        android:textSize="25sp"
        android:id="@+id/information" />
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/skilltodamage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintVertical_bias="0"
        android:text="查看棋盘，放置技能"
        android:textSize="25sp"
        android:id="@+id/see_board" />


</androidx.constraintlayout.widget.ConstraintLayout>