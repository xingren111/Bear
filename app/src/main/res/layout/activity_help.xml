<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Help">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="经典模式如何玩？"
                        android:textSize="24dp" />

                    <Button
                        android:id="@+id/unfold_DD"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="4"
                        android:text="展开"
                        android:textSize="16dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/helptext_DD"
                    android:layout_width="match_parent"
                    android:text="@string/helptext_DD_text"
                    android:visibility="gone"
                    android:layout_height="wrap_content"></TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="BOBO如何玩？"
                        android:textSize="24dp" />

                    <Button
                        android:id="@+id/unfold_BOBO"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="4"
                        android:text="展开"
                        android:textSize="16dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/helptext_BOBO"
                    android:layout_width="match_parent"
                    android:text="@string/helptext_BOBO_text"
                    android:visibility="gone"
                    android:layout_height="wrap_content"></TextView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="成键如何玩？"
                        android:textSize="24dp"
                        android:visibility="gone"/>

                    <Button
                        android:id="@+id/unfold_bekey"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="4"
                        android:text="展开"
                        android:textSize="16dp"
                        android:visibility="gone"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/helptext_bekey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/helptext_bekey_text"
                    android:visibility="gone"></TextView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>